.contents
  .leftContent
    .leftContent__top
      .leftContent__top--name
        = current_user.name
      
      .leftContent__top--menu
        = link_to edit_user_path(current_user) do
          = fa_icon "cog"
      
        = link_to new_group_path do
          = fa_icon "edit"


    .leftContent__groups
      - current_user.groups.each do |group|
        .groups__group
          = link_to group_messages_path(group) do
            .groups__group--name
              = group.name
            .groups__group--message
              = group.show_last_message

  .rightContent
    .rightContent__top
      = link_to "Edit", edit_group_path(current_user) 
      .rightContent__top--groupName
        = @group.name
      .rightContent__top--groupMember
        
        %ul{class: "member-list"} 
          Member: 
          %li{class:"member"} tanaka
          %li{class:"member"} takahasi
          %li{class:"member"} nakata

    .chatArea
      = render partial: 'chatarea', collection: @messages
    
    .inputArea
      = form_for [@group, @message] do |f|
        = f.text_field :message, class:"inputArea__textArea", place_holder:"type messages", id:'sendMessageText'
        = f.label :image, class: 'inputArea__textArea--selectImages' do
          = fa_icon 'picture-o', class: 'icon'
          = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'inputArea--sendBtn', id:'sendMessageBtn'
