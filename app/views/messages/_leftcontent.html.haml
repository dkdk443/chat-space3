.leftContent
  .leftContent__top
    .leftContent__top--name
      = current_user.name
    
    .leftContent__top--menu
      = link_to edit_user_path(current_user) do
        = fa_icon "cog"
    
      = link_to new_group_path do
        = fa_icon "edit"


  .leftContent__groups
    - current_user.groups.each do |group|
      .groups__group
        = link_to group_messages_path(group) do
          .groups__group--name
            = group.name
          .groups__group--message
            = group.show_last_message
            